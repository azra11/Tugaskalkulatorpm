<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.PM_KALKULATOR.pengurangan"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU PENGURANGAN"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="80sp"
        />

    <EditText
        android:id="@+id/angka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" "
        android:textColorHint="@android:color/holo_green_light"
        android:textColor="@android:color/holo_green_light"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150sp"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/angka2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" "
        android:textColorHint="@android:color/holo_green_light"
        android:textColor="@android:color/holo_green_light"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_below="@id/angka"
        android:inputType="number"
        />

    <Button
        android:id="@+id/btn_kurang"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/angka2"
        android:layout_centerHorizontal="true"
        android:text="-  "
        android:textSize="20sp"
        android:background="@android:color/white"
        android:layout_marginTop="20sp"
        />

    <TextView
        android:id="@+id/tv_kurang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:textColorHint="@android:color/white"
        android:layout_below="@id/btn_kurang"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="10sp"
        android:textColor="@android:color/holo_green_light"
        />

</RelativeLayout>