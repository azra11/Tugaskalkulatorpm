<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.PM_KALKULATOR.MainActivity"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_green_light"
        android:textSize="20sp"
        android:layout_marginTop="100sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/judul2"
        android:layout_below="@id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalkulator"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_green_light"
        android:textSize="20sp"
        android:layout_marginTop="5sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_jumlah"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/judul2"
        android:layout_marginLeft="90sp"
        android:layout_marginTop="50sp"
        android:text="+"
        android:textSize="30sp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/btn_kurang"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/btn_jumlah"
        android:layout_below="@id/judul2"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="20sp"
        android:text="-"
        android:textSize="30sp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/btn_kali"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_kurang"
        android:layout_marginLeft="90sp"
        android:layout_marginTop="10sp"
        android:text="x"
        android:textSize="20sp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/btn_bagi"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_kurang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:layout_toRightOf="@id/btn_kali"
        android:text=":"
        android:textSize="30sp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        />


    <Button
        android:id="@+id/btn_x"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_bagi"
        android:layout_marginLeft="90sp"
        android:layout_marginTop="10sp"
        android:text=""
        android:textSize="15sp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/btn_persen"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_bagi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:layout_toRightOf="@id/btn_kali"
        android:text="%"
        android:textSize="20sp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        />

</RelativeLayout>